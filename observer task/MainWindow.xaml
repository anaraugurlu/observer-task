<Window x:Class="observer_task.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:observer_task"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Yellow" >
        <StackPanel >
            
        <Label FontSize="30">Product Name</Label>
        <TextBox Width=" 300" Name="name" Height=" 50" HorizontalAlignment="Left" Margin="2,0,0,0" FontSize=" 30"   ></TextBox>
        <Label FontSize="30">Customer Email</Label>
        <TextBox Width=" 300" Name="email" Height=" 50" HorizontalAlignment="Left" FontSize=" 30"></TextBox>
            <Button Width=" 300" Height=" 50" Name="add" FontSize=" 30" Background="Gold" Margin=" 5,50,0,0" HorizontalAlignment="Left" Click="add_Click"      >Add Customer</Button>
            <Button Width=" 300" Height=" 50" Name="notify" FontSize=" 30" Background="Gold" HorizontalAlignment="Left" Margin=" 5,30,0,0" Click="notify_Click" >Notify All</Button>  
        </StackPanel>
    </Grid>
</Window>
